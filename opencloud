services:
  opencloud:
    image: opencloudeu/opencloud:latest
    container_name: opencloud
    restart: unless-stopped
    volumes:
      - /app/config:/etc/opencloud
      - /app/data:/var/lib/opencloud
    env_file:
      - .env
    networks:
      - proxy
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.opencloud.rule=Host(`dxp2800-0aef.tail10d5bf.ts.net`)"
      - "traefik.http.routers.opencloud.entrypoints=https"
      - "traefik.http.services.opencloud.loadbalancer.server.port=9200"

networks:
  proxy:
    external: true   
